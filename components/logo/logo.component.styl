@import '../../shared/variables.styl'

.likearts-content .logo
	color #000
	user-select none
	display flex
	flex-flow row nowrap
	justify-content space-between
	align-items center

	&__area
		font-size 5rem
		font-family 'BebasNeueBold'
		font-weight 700
		line-height 1
		margin-right 10px
		transition font-size .2s ease-in-out
		@media all and (max-width: $tablet)
			font-size 3rem
			margin-right 5px

		&--blue
			background-color $primary-color
			padding 5px 13px
			color #fff

		&--rounded
			border-radius 10px

	&__text
		font-weight 300
		font-size 1.8rem
		line-height 1.25
		transition font-size .2s ease-in-out
		@media all and (max-width: $tablet)
			font-size 1.1rem