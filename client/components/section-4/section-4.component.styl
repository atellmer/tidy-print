@import '../../shared/variables.styl'

.likearts-content .section-4
	position relative
	width 100%
	height auto
	min-height 1577px
	background-image url('../../images/section-4/bg/section-4.png')
	z-index 70
	margin-top -760px
	@media all and (max-width: $tablet)
		margin-top -820px

	&__shift
		padding-top 840px

	&__content
		position relative

	&__bids
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch

	&__bid
		position relative
		width calc(25% - 2px)
		height auto
		background-color #fff
		margin 1px 1px
		transition box-shadow .2s ease-in-out
		z-index 1
		@media all and (max-width: $tablet)
			width calc(50% - 2px)
		@media all and (max-width: $phone)
			width calc(100% - 2px)
		&:hover
			box-shadow 0 0 18px rgba(72, 214, 245, 0.68)
			z-index 2
			.section-4__bid-title
				color #fff
			.section-4__bid-price
				color #fff
			.section-4__bid-currency:after
				border-bottom-color #fff

	&__bid-title
		font-size 1.8rem
		font-weight 500
		transition color .2s ease-in-out

	&__bid-price
		font-size 3rem
		font-weight 700
		transition color .2s ease-in-out

	&__bid-currency
		position relative
		top -10px
		font-size 1.6rem
		font-weight 500

		&:after
			content ''
			position absolute
			width 100%
			height 2px
			bottom -7px
			right 0
			transition all .2s ease-in-out
			border-bottom 2px solid $primary-color

	&__cover
		width 100%
		height auto
		min-height 411px
		display flex
		flex-flow column wrap
		justify-content space-between
		align-items center
		padding 35px 0 28px 0

		&--1
			background-image url('../../images/section-4/1.jpg')

		&--2
			background-image url('../../images/section-4/2.jpg')

		&--3
			background-image url('../../images/section-4/3.jpg')

		&--4
			background-image url('../../images/section-4/4.jpg')