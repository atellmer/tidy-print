@import '../../shared/variables.styl'

.likearts-content .section-4
	position relative
	width 100%
	height auto
	min-height 660px
	z-index 3

	&__content
		position relative

	&__docket
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch

	&__docket-item
		position relative
		width calc(25% - 2px)
		height auto
		padding 20px
		background-color #fff
		margin 1px 1px
		transition background-color .2s ease-in-out
		z-index 1
		&:hover
			background-color $primary-color
			box-shadow 0 14px 45px rgba(30, 206, 244, 0.25), 0 10px 18px rgba(30, 206, 244, 0.22)
			color #fff
			z-index 2
			.section-4__num-label
				color #fff
			.section-4__docket-desc
				color #fff
			.section-4__icon--note
				background-image url('../../images/icons/note--w.png')
			.section-4__icon--communication
				background-image url('../../images/icons/communication--w.png')
			.section-4__icon--letter
				background-image url('../../images/icons/letter--w.png')
			.section-4__icon--box
				background-image url('../../images/icons/box--w.png')
			.section-4__docket-title span
				color #fff
				border-bottom 1px dashed #fff
			.section-4__num-label
				color #fff
			.section-4__num-label-arrow
				background-color #fff
			.section-4__num-label-arrow:after
				border-left 5px solid #fff
		@media all and (max-width: $tablet)
			width calc(50% - 2px)
		@media all and (max-width: $phone)
			padding 10px

	&__icon
		display inline-block
		width 160px
		height 160px
		@media all and (max-width: $tablet)
			width calc(160px / 1.5)
			height calc(160px / 1.5)
		@media all and (max-width: $phone)
			width calc(160px / 2)
			height calc(160px / 2)

		&--note
			background-image url('../../images/icons/note.png')

		&--communication
			background-image url('../../images/icons/communication.png')

		&--letter
			background-image url('../../images/icons/letter.png')

		&--box
			background-image url('../../images/icons/box.png')

	&__num-label
		color #e0e0e0
		font-size 1.8rem
		font-weight 900
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center

	&__num-label-num
		margin-right 5px

	&__num-label-arrow
		position relative
		width 100%
		height 1px
		background-color #e0e0e0
		&:after
			content ''
			position absolute
			top 50%
			right 0
			transform translate(100%, -50%)
			border 5px solid transparent
			border-left 5px solid #e0e0e0

	&__docket-content
		padding 0 5px 10px 10px
		@media all and (max-width: $tablet)
			padding 0

	&__docket-title
		font-weight 900
		font-size 1.8rem
		margin 0 0 29px 0
		@media all and (max-width: 992px)
			font-size 1.6rem
			margin 0 0 20px 0
		@media all and (max-width: $tablet)
			font-size 1.4rem
			margin 0 0 15px 0

		span 
			color $primary-color
			border-bottom 1px dashed $primary-color
			cursor pointer

	&__docket-desc
		font-weight 300
		font-size 1.6rem
		color $color-text-hint
		@media all and (max-width: 992px)
			font-size 1.4rem
		@media all and (max-width: $tablet)
			font-size 1.2rem

	.l-btn
		margin 60px 0
		display flex
		flex-flow row wrap
		justify-content center
		align-items center

