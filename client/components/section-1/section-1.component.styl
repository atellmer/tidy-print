@import '../../shared/variables.styl'

.likearts-content .section-1
	width 100%
	height auto
	min-height 657px
	background-image url('../../images/bg/1.png')
	padding 50px 0 0 0

	&__content
		position relative
		display flex
		flex-flow row wrap
		justify-content space-between
		padding-top 50px

	&__desc
		position relative
		z-index 2
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch

	&__desc-item
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center
		flex-basis 50%
		margin-bottom 31px
		@media all and (max-width: $phone)
			flex-flow row wrap
			flex-basis 100%

		&--order-2
			@media all and (min-width: $phone)
				order 1

		&--order-3
			@media all and (min-width: $phone)
				order 0

		&--order-4
			@media all and (min-width: $phone)
				order 1

	&__desc-text
		color #fff
		margin 0 20px
		font-size 1.6rem
		font-weight 700
		@media all and (max-width: $tablet)
			font-size 1.2rem

.likearts-content .l-desc
	width 50%
	@media all and (max-width: 992px)
		width 100%

.likearts-content .num-label
	display inline-flex
	justify-content center
	align-items center
	width 51px
	height 51px
	border 4px solid #fff
	border-radius 50%
	color #fff
	font-weight 900
	font-size 1.8rem
	@media all and (max-width: $phone)
		width 40px
		height 40px
		font-size 1.4rem

.likearts-content	.l-btn
	position relative
	z-index 2
	display flex
	margin-top 34px
	@media all and (max-width: $tablet)
		margin-top 20px
		justify-content center

.likearts-content .l-image
	width 50%
	display flex
	@media all and (max-width: 992px)
		width 100%
		max-width 500px
		display block
		position absolute
		z-index 1
		top calc(50% + 185px)
		left calc(50% + 125px)
		transform translate(-50%, -50%)
	@media all and (max-width: $tablet)
		top calc(50% + 100px)
		left calc(50% + 50px)
	@media all and (max-width: $phone)
		top 50%
		left 50%
		transform translate(-50%, -50%)





