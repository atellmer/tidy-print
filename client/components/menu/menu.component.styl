@import '../../shared/variables.styl'


.likearts-content .menu
	display block
	width 100%
	height auto
	min-height 50px
	background-color $menu-bg-color

.likearts-content .menu-desktop
	@media all and (max-width: 992px)
		display none

	&__list
		display flex
		flex-flow row wrap
		justify-content flex-start
		align-items center
		width 100%
		list-style none
		padding 0
		margin 0
		font-size 1.1rem
		font-weight 500
		text-transform uppercase

	&__list-item
		border-right 1px solid #2b2b2b
		background-color $menu-bg-color
		transition all .2s ease-in-out
		&:hover
			background-color $menu-bg-color-hover

	&__list-item.is-active
		background-color $menu-bg-color-hover

	&__list-link
		display block
		color #fff
		padding 18px 25px 16px 25px

.likearts-content .menu-mobile
	display none
	@media all and (max-width: 992px)
		display block

	&__btn
		position relative
		width 50px
		height 50px
		z-index 100
		cursor pointer

	&__icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #fff

	&__list
		position fixed
		top 0
		left 0
		z-index 99
		transition all .2s ease-in-out
		transform translateX(-200px)
		width 200px
		height 100%
		background-color #fff
		list-style none
		padding 50px 0 0 0
		margin 0
		font-size 1.1rem
		font-weight 500
		text-transform uppercase
		overflow-y auto

	&__list-item
		border-bottom 1px solid #eee
		transition all .2s ease-in-out
		&:hover
			background-color #e0e0e0

	&__list-item.is-active
		background-color #e0e0e0

	&__list-link
		display block
		color $color-text-hint
		padding 16px

	&__overlay
		display none
		position fixed
		top 0
		left 0
		z-index 98
		width 100%
		height 100%
		background-color #000
		opacity .5
