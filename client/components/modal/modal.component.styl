@import '../../shared/variables.styl'


.likearts-content .modals
	position relative

	&__overlay
		display none
		visibility hidden
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		background-color rgba(0, 0, 0, 0.7)
		z-index 10001
		cursor pointer

	.modal-wrap
		position relative
		width 100%
		height auto

.likearts-content .print-modal
	display none
	visibility hidden
	position fixed
	top 50%
	left 50%
	transform translate(-50%, -50%)
	width 570px
	max-width 100%
	height auto
	background-color #fff
	padding 58px 100px
	max-height calc(100vh - 40px)
	overflow auto
	z-index 10001
	@media all and (max-width: $phone)
		width calc(100% - 40px)
		padding 20px

	&__close-btn
		position relative
		top 0
		left 100%
		transform translate(100%, 0%)
		margin-top -40px
		width 40px
		height 40px
		cursor pointer
		user-select none
		background-color $primary-color
		@media all and (max-width: $phone)
			display none

	&__icon
		position absolute
		top 50%
		left 50%
		transform translate(-50%, -50%)
		color #fff

	&__header
		font-weight 900
		font-size 2rem
		text-align center
		margin-bottom 39px
		@media all and (max-width: 992px)
			margin-bottom 20px
		@media all and (max-width: $phone)
			font-size 1.8rem
			margin-bottom 10px

	.l-print-btn
		display flex
		justify-content center
		.print-btn
			max-width 369px

.likearts-content .js-is-open
	display block
	animation modal-motion .6s 1 ease-in-out
	animation-fill-mode forwards

@keyframes modal-motion {
	0% {
		visibility visible
		opacity 0
	}
	100% {
		visibility visible
		opacity 1
	}
}
