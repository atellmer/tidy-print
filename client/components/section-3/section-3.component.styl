@import '../../shared/variables.styl'

.likearts-content .section-3
	position relative
	width 100%
	height auto
	min-height 1148px
	background-image url('../../images/section-3/bg/section-3.png')
	z-index 80
	margin-top -450px
	@media all and (max-width: $tablet)
		min-height 1064px

	&__shift
		padding-top 485px

	&__content
		position relative
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items flex-start

	&__photo-content
		position relative
		width 50%
		@media all and (max-width: $tablet)
			display none

	&__price-table
		width 50%
		color #fff
		@media all and (max-width: $tablet)
			width 100%

	&__price-title
		font-size 3.6rem
		font-weight 900
		line-height 1.08
		margin-bottom 44px
		@media all and (max-width: $tablet)
			text-align center
			font-size 1.8rem

	&__notice
		display flex
		flex-flow row nowrap
		justify-content flex-start
		align-items center

	&__notice-icon
		@media all and (max-width: $phone)
			display none

	&__notice-sign
		font-size 2.2rem
		font-weight 300
		margin-left 28px
		@media all and (max-width: 992px)
			font-size 1.6rem

		@media all and (max-width: $phone)
			margin-left 0

		a
			text-decoration underline
			color $primary-color

	.price-block
		width 100%
		height auto
		margin-bottom 39px

		&__item
			position relative
			width 100%
			height auto
			min-height 65px
			padding 0 41px 0 41px
			display flex
			flex-flow row nowrap
			justify-content space-between
			align-items center
			background-color rgba(0, 0, 0, 0.3)
			margin-bottom 1px
			transition background-color .2s ease-in-out
			line-height 0.7
			cursor pointer
			@media all and (max-width: $tablet)
				background-color rgba(0, 0, 0, 0.6)

			@media all and (max-width: $phone)
				padding 0 20px

			&:hover
				background-color $primary-color

				&:before
					opacity 1

				.price-block__item-separator
					opacity 1

			&:before
				content url('../../images/section-3/triangle.png')
				position absolute
				width 29px
				height 65px
				top 0
				left 0
				transform translate(-100%, 0)
				transition all .2s ease-in-out
				opacity 0
				@media all and (max-width: $tablet)
					display none

		&__item-format
			font-size 2.2rem
			font-weight 700
			@media all and (max-width: $phone)
				font-size 2rem

		&__item-separator
			color #fff
			opacity 0.12
			font-size 3rem
			font-weight 100
			transition all .2s ease-in-out
			cursor default
			user-select none
			@media all and (max-width: $phone)
				font-size 2.5rem

		&__item-size
			font-size 1.6rem
			font-weight 300

		&__item-price
			font-size 2.5rem
			font-weight 700
			@media all and (max-width: $phone)
				font-size 2.3rem

		&__item-currency
			position relative
			top -10px
			font-size 1.4rem
			font-weight 500
			@media all and (max-width: $phone)
				font-size 1.2rem

			&:after
				content ''
				position absolute
				width 100%
				height 2px
				bottom -7px
				right 0
				transition all .2s ease-in-out
				border-bottom 2px solid $primary-color

	.photo-block
		position absolute
		top 78px
		right 136px
		width 308px
		height 454px
		@media all and (max-width: 992px)
			right 137px


	.js-is-A2
		background-image url('../../images/section-3/a-2.png')

	.js-is-A3
		background-image url('../../images/section-3/a-3.png')

	.js-is-A4
		background-image url('../../images/section-3/a-4.png')

	.js-is-A5
		background-image url('../../images/section-3/a-5.png')

	.js-is-A6
		background-image url('../../images/section-3/a-6.png')

