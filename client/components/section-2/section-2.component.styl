@import '../../shared/variables.styl'

.likearts-content .section-2
	position relative
	width 100%
	height auto
	padding 50px 0 0 0
	z-index 90

	&__content
		position relative

	&__docket
		display flex
		flex-flow row wrap
		justify-content space-between
		align-items stretch

	&__docket-item
		position relative
		width 33.3333333333%
		height auto
		padding 20px
		background-color #fff
		border-right 1px solid #edeeee
		border-bottom 1px solid #edeeee
		transition background-color .2s ease-in-out, border .2s ease-in-out
		z-index 1
		&:nth-child(3n)
			border-right 0
		&:hover
			background-color $primary-color
			box-shadow 0 14px 45px rgba(30, 206, 244, 0.25), 0 10px 18px rgba(30, 206, 244, 0.22)
			border-right 1px solid $primary-color
			border-bottom 1px solid $primary-color
			color #fff
			&:nth-child(3n)
				border-right 0
			z-index 2
			.section-2__num-label
				color #fff
			.section-2__docket-desc
				color #fff
			.section-2__icon--roller
				background-image url('../../images/icons/roller--w.png')
			.section-2__icon--paint
				background-image url('../../images/icons/paint--w.png')
			.section-2__icon--cotton
				background-image url('../../images/icons/cotton--w.png')
			.section-2__icon--t-shirts
				background-image url('../../images/icons/t-shirts--w.png')
			.section-2__icon--ruler
				background-image url('../../images/icons/ruler--w.png')
			.section-2__icon--silk
				background-image url('../../images/icons/silk--w.png')
		@media all and (max-width: $tablet)
			width 50%
			&:nth-child(3n)
				border-right 1px solid #edeeee
			&:nth-child(2n)
				border-right 0
		@media all and (max-width: $phone)
			padding 10px
		
	&__icon
		display inline-block
		width 160px
		height 160px
		@media all and (max-width: $tablet)
			width calc(160px / 1.5)
			height calc(160px / 1.5)
		@media all and (max-width: $phone)
			width calc(160px / 2)
			height calc(160px / 2)

		&--roller
			background-image url('../../images/icons/roller.png')

		&--paint
			background-image url('../../images/icons/paint.png')

		&--cotton
			background-image url('../../images/icons/cotton.png')

		&--t-shirts
			background-image url('../../images/icons/t-shirts.png')

		&--ruler
			background-image url('../../images/icons/ruler.png')

		&--silk
			background-image url('../../images/icons/silk.png')

	&__num-label
		color #e0e0e0
		font-size 1.8rem
		font-weight 900

	&__docket-content
		padding 0 5px 20px 20px
		@media all and (max-width: $tablet)
			padding 0

	&__docket-title
		font-weight 900
		font-size 2rem
		margin 0 0 29px 0
		@media all and (max-width: 992px)
			font-size 1.6rem
			margin 0 0 20px 0
		@media all and (max-width: $tablet)
			font-size 1.4rem
			margin 0 0 15px 0

	&__docket-desc
		font-weight 300
		font-size 1.6rem
		color $color-text-hint
		@media all and (max-width: 992px)
			font-size 1.4rem
		@media all and (max-width: $tablet)
			font-size 1.2rem

.likearts-content .l-icon
	padding 35px
	display flex
	justify-content center
	align-items center
	@media all and (max-width: $tablet)
		padding 15px
