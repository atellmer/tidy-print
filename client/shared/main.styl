@import './variables.styl'

html, body
	width 100%
	height auto
	min-height 100%

.likearts-content
	font-family 'MyseoSansCyrl', sans-serif
	font-weight 400
	background $bg-color
	font-smoothing antialiased
	overflow-scrolling touch
	color $color-text

.likearts-content a
	&:hover
		outline none
		text-decoration none
	&:active
		outline none
		text-decoration none
	&:focus
		outline none
		text-decoration none

.likearts-content .icon
	display inline-block

.likearts-content .container-fluid
	padding 0
	margin 0

.likearts-content .main-layout
	max-width $container-width
	margin 0 auto
	@media all and (max-width: 1250px)
		padding 0 15px

.likearts-content .section
	&__title
		position relative
		z-index 10
		&--h1
			margin 0
			color #fff
			font-weight 300
			font-size 4.3rem
			span
				font-weight 900
			@media all and (max-width: 992px)
				font-size 3.3rem
			@media all and (max-width: $tablet)
				font-size 2.3rem
