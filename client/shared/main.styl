@import './variables.styl'

html, body
	width 100%
	height auto
	min-height 100%

.likearts-content
	font-family 'MyseoSansCyrl', sans-serif
	font-weight 400
	background $bg-color
	font-smoothing antialiased
	overflow-scrolling touch
	color $color-text-primary
	overflow-x hidden

.likearts-content a
	&:hover
		outline none
		text-decoration none
	&:active
		outline none
		text-decoration none
	&:focus
		outline none
		text-decoration none

.likearts-content .icon
  display inline-block

.likearts-content .container-fluid
	padding 0
	margin 0

.likearts-content .container
	max-width $container-width
